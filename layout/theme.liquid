<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->

    <!-- og meta tags -->
    {%- assign og_title = page_title -%}
    {%- assign og_url = canonical_url -%}
    {%- assign og_description = page_description | default: shop.description | default: shop.name -%}
    <meta property="og:title" content="{{ page_title }}">
    <meta property="og:url" content="{{ og_url }}">
    <meta property="og:description" content="{{ og_description }}">
    <meta property="og:type" content="website">

    <!-- Favicon -->
    <link type="image/png" href="{{ 'favicon.png' | asset_url }}" rel="icon">
    <!-- Font Awesome -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    >
    <!-- CSS -->
    {{ 'application.scss.css' | asset_url | stylesheet_tag }}
    <title>{{ page_title }}</title>
  </head>
  <body>
    {% section 'header' %}

    <main role="main">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}
  </body>
</html>
